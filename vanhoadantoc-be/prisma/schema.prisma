// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("manager")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Content {
  id        Int      @id @default(autoincrement())
  title     String?  // Nullable for existing records
  type      String   // 'news' | 'event' | 'policy' | 'ethnic' | 'religious' | 'location' | 'site'
  imgCover  String?  // Cover image URL from /api/uploads
  metadata  Json?    // Type-specific data: { category, location } for site
  content   Json     // TipTap JSON (includes text, images, formatting)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
